    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Producer App",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:debug",
                "--",
                "--inspect-brk"
              ],
              "autoAttachChildProcesses": true,
              "console": "integratedTerminal",
              "sourceMaps": true,
              "restart": true,
              "stopOnEntry": false,            
              "skipFiles": [
                  "<node_internals>/**"
              ],
              "cwd": "${workspaceFolder}/sample/mq-producer",
              "outFiles": [
                  "${workspaceFolder}/sample/mq-producer/dist/**/*.js"
              ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Consumer App",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:debug",
                "--",
                "--inspect-brk"
              ],
              "autoAttachChildProcesses": true,
              "console": "integratedTerminal",
              "sourceMaps": true,
              "restart": true,
              "stopOnEntry": false,            
              "skipFiles": [
                  "<node_internals>/**"
              ],
              "cwd": "${workspaceFolder}/sample/mq-consumer",
              "outFiles": [
                  "${workspaceFolder}/sample/mq-consumer/dist/**/*.js"
              ]
        }
    ]
}